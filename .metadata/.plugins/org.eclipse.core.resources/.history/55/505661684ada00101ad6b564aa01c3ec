package comm.library;

public class Book {
    /**
     *
     */
    private String title;
    /**
     *
     */
    private String author;
    /**
     *
     */
    private int yearPublished;
    /**
     *
     */
    private boolean isRented;
    /**
     *
     * @param title1
     * @param author1
     * @param yearPublished1
     */
    public Book(
            final String title1,
            final String author1,
            final int yearPublished1) {
        this.title = title1;
        this.author = author1;
        this.yearPublished = yearPublished1;
        this.isRented = true;
    }
    /**
     *
     * @return isRented
     */
    public boolean isRented() {
        return isRented;
    }
    /**
     *
     */
    public void rent() {
        if (!isRented) {
            isRented = true;
            System.out.println(title + " " + author + " " + yearPublished);
        }
    }
    /**
     *
     */
    public void display() {
        System.out.println(title + " " + author + " " + yearPublished);
    }
}
