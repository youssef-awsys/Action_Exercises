package comm.leapyear;


public final class LeapYear {
    /**
     *
     */
    private int leapyear;
    private LeapYear(final int year1) {
        this.leapyear = year1;
    }
    public static class CheckLeapYear {
        /**
         *
         */
        private int year;
        /**
         *
         * @param currentYear
         */
        public CheckLeapYear(final int currentYear) {
            this.year = currentYear;
        }
        /**
         *
         * @return boolean
         */
        public boolean isLeapYear() {
            final int x = 4;
            final int y = 100;
            final int z = 400;
            if (year % z == 0) {
                return true;
            } else if (year % y == 0) {
                return false;
            } else if (year % x == 0) {
                return true;
            }
            return false;
        }
        /**
         *
         * @return year
         */
        public int getYear() {
            return year;
        }
        /**
         *
         * @param year1
         */
        public void setYear(final int year1) {
            this.year = year1;
        }
    }
    /**
     *
     * @param args
     */
    public static void main(final String[] args) {
        System.out.println(new LeapYear(2000));
    }
}



