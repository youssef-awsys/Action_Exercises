package comm.library;

import java.util.ArrayList;

public final class BookRentalSystem {
    /**
     *
     */
    private BookRentalSystem() {
        super();
    }
    /**
     *
     */
    private static ArrayList<Book> library = new ArrayList<>();
    /**
     *
     * @param args
     */
    public static void main(final String[] args) {
        addBooks();
        for (Book book : library) {
            book.display();
        }
        rentBooks();
    }
    /**
     *
     */
    public static void addBooks() {
        final int[] year = {1954, 1960, 2000, 1997};
        library.add(new FictionBook(
                "The Lord of the Rings",
                "J.R.R. Tolkien",
                year[0]));
        library.add(new FictionBook("To Kill a Mockingbird", "Harper Lee", 1960));  
        library.add( new NonFictionBook("The Tipping Point", "M. Gladwell", 2000));
        library.add( new NonFictionBook("Guns, Germs, and Steel", "Jared Diamond ", 1997));
    }
    public static void rentBooks() {
        System.out.println("Books rented: ");
        library.get(0).rent();
        library.get(2).rent();
    }
    public static void clearLibrary() {
    }
}
