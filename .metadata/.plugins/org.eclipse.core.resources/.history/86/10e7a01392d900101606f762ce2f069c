package comm.library;

public class Book {
    /**
     *
     */
    private String title;
    /**
     *
     */
    private String author;
    /**
     *
     */
    private int yearPublished;
    /**
     *
     */
    private boolean isRented;
    /**
     *
     * @param title
     * @param author
     * @param yearPublished
     */
    public Book(final String title,  final String author, int yearPublished) {
        this.title = title;
        this.author = author;
        this.yearPublished = yearPublished;
        this.isRented = false;
    }
    
    public boolean isRented() {
        return isRented;
    }
    
    public void rent() {
        if(!isRented) {
            isRented = true;
            System.out.println(title + " " + author + " " + yearPublished);
        }
    }
    
    public void display() {
        System.out.println(title + " " + author + " " + yearPublished); 
    }
}
