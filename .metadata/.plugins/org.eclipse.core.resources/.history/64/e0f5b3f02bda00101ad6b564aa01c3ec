package comm.leapyear;


public final class LeapYear {
    /**
     *
     */
    private int year;
    LeapYear(final int currentYear) {
        this.year = currentYear;
    }
    public boolean isLeapYear() {
        final int x = 4;
        final int y = 100;
        final int z = 400;
        if (year % z == 0) {
            return true;
        } else if (year % y == 0) {
            return false;
        } else if (year % x == 0) {
            return true;
        }
        return false;
    }
    /**
     *
     * @param string
     */
    public static void main(final String string) {

    }
}



