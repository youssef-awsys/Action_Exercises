package comm.leapyear;


public final class LeapYear {
    protected LeapYear() {
        super(year);
    }
    public static class CheckLeapYear {
        /**
         *
         */
        private int year;
        /**
         *
         * @param currentYear
         */
        public CheckLeapYear(final int currentYear) {
            this.year = currentYear;
        }
        /**
         *
         * @return boolean
         */
        public boolean isLeapYear() {
            final int x = 4;
            final int y = 100;
            final int z = 400;
            if (year % z == 0) {
                return true;
            } else if (year % y == 0) {
                return false;
            } else if (year % x == 0) {
                return true;
            }
            return false;
        }
    }
}



